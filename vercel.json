{
  "version": 2,
  "builds": [
    {
      "src": "mikaty-vitrine/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "cd mikaty-vitrine && npm install"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/mikaty-vitrine/build/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/mikaty-vitrine/build/index.html"
    }
  ]
} 